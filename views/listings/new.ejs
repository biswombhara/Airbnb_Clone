<%- layout("/layouts/boiler.ejs") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <h3>Create new Listing</h3>
            <form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title </label>
                    <input type="text" placeholder="Enter Title" name="listing[title]" id="title" class="form-control" required>
                    <div class="valid-feedback">
                        Valid title 
                    </div>
                    <div class="invalid-feedback">
                        Give valid title 
                    </div>
                </div>
                <div class="mb-3">
                    <label for="filter" class="form-label">Type </label>
                    <select name="listing[filter]" for="filter" class="form-select" aria-label="Default select example" required>
                        <option >Select Types Here</option>
                        <option value="Arctic">Arctic</option>
                        <option value="Beach">Beach</option>
                        <option value="Camping">Camping</option>
                        <option value="Castles">Castles</option>
                        <option value="Iconic cities">Iconic cities</option>
                        <option value="Lakes">Lakes</option>
                        <option value="Mountains">Mountains</option>
                        <option value="Pools">Pools</option>
                        <option value="Skiing">Skiing</option>
                        <option value="Tree house">Tree house</option>
                      </select>
                </div>                
                <div class="mb-3">
                    <label for="description" class="form-label">Description </label>
                    <textarea name="listing[description]" placeholder="Enter description" id="description" class="form-control" required></textarea> 
                    <div class="valid-feedback">
                        Valid description 
                    </div>
                    <div class="invalid-feedback">
                        Give valid description 
                    </div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Upload Image </label>
                    <input type="file" name="listing[image]" id="image" class="form-control" required> 
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price </label>
                        <input type="number" placeholder="Enter price" name="listing[price]" id="price" class="form-control" required>
                        <div class="valid-feedback">
                            Valid price 
                        </div>
                        <div class="invalid-feedback">
                            Give valid price 
                        </div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="location" class="form-label">Location </label>
                        <input type="text" placeholder="Enter location" name="listing[location]" id="location" class="form-control" required> 
                        <div class="valid-feedback">
                            Valid location 
                        </div>
                        <div class="invalid-feedback">
                            Give valid location 
                        </div>
                    </div>
                </div>        
                <div class="mb-3">
                    <label for="country" class="form-label">Country </label>
                    <input type="text" placeholder="Enter country name" name="listing[country]" id="country" class="form-control" required> 
                    <div class="valid-feedback">
                        Valid country name 
                    </div>
                    <div class="invalid-feedback">
                        Give valid country name 
                    </div>
                </div>
                <button class="btn btn-dark add-btn">Add</button>
                <br> <br>
            </form>
        </div>
    </div>
</body>